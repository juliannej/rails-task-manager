<h1>Tasks#index</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.name, task %>
    <% if task.completed %>
      [X]
    <% else %>
      [ ]
    <% end %>
    <%= link_to 'edit', edit_task_path(task) %>
    <%= link_to 'delete', task_path(task), method: :delete%>
  </li>
  <% end %>
  <li><%= link_to 'create new task', new_task_path %></li>
</ul>


